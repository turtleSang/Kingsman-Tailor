generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id Int @id @default(autoincrement())
  name String @unique
  link String @unique
  urlImg String?
  products Product[]
}

model Product {
  id Int @id @default(autoincrement())
  name String @unique
  link String @unique
  description String?
  price Float @default(0)
  thumbnail String?
  imagesUrl ImageUrl[]
  categoryId Int
  category Category @relation(fields: [categoryId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ImageUrl{
  id Int @id @default(autoincrement())
  url String
  productId Int
  product Product @relation(fields: [productId], references: [id])
}

model Banner{
  id Int @id @default(autoincrement())
  imageUrl String @unique
  link String?
  description String?
}

model FeedBack{
  id Int @id @default(autoincrement())
  image String
  customerName String
  feedback String
}